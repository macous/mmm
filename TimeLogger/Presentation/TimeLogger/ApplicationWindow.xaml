<Window x:Class="TimeLogger.ApplicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Views="clr-namespace:TimeLogger.Views"
        xmlns:ViewModels="clr-namespace:TimeLogger.ViewModels"
        Height="230" Width="200" Topmost="True" WindowStartupLocation="Manual" WindowStyle="None">
    <Window.Resources>
        <DataTemplate DataType="{x:Type ViewModels:TimeLoggerViewModel}">
            <Views:TimeLoggerView />
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <ContentControl Content="{Binding CurrentView}"  />
    </Grid>
</Window>
