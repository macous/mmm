<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Styles -->
    <SolidColorBrush Color="#D1DFFF" x:Key="LightBlue" />
    
    <Style x:Key="ImageButtonStyle">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border>
                        <Image Source="/Resources/Images/Update.png" Width="15" Margin="5,0,0,0" Cursor="Hand" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>